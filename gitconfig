[alias]
  a  = add
  aa = add --all
  ap = add --patch

  b  = branch
  ba = branch --all
  br = branch --remote

  ca  = commit --amend
  ci  = commit -v
  cl  = clone
  co  = checkout
  com = checkout master

  dc  = diff --word-diff --cached --color-words
  df  = diff --word-diff --color-words
  dfs = diff --staged

  f = fetch

  l  = log --graph --date=format:'%b %d, %Y' --pretty=format:'%C(yellow)%h%Creset %C(blue)%aN%Creset %s %C(green)%cd'
  ls = log --stat --date=format:'%b %d, %Y' --pretty=format:'%C(yellow)%h%Creset %C(blue)%aN%Creset %s %C(green)%cd'
  lg = log

  mup = !git checkout master && git pull && git checkout -

  pl     = pull
  ps     = push
  pum    = push -u origin master
  please = push --force-with-lease

  recent = for-each-ref --sort = committerdate refs/heads/ --format = '%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  rv     = remote -v

  s = status --short --branch
  st  = status

  tl = tag --list

  unstage  = reset
  uncommit = reset --soft HEAD^

  wch = whatchanged -p --abbrev-commit --pretty=medium

[apply]
  whitespace = nowarn

[color]
  ui = auto
  ignorecase = false

[commit]
  template = ~/.gitmessage

[core]
  autocrlf = input
  safecrlf = true
  editor = vim
  excludesfile = ~/.gitignore_global

[color "status"]
  untracked = cyan

[fetch]
  prune = true

[gitsh]
  defaultCommand = status --short --branch

[gitsh "color"]
  default = blue
  untracked = cyan
  modified = red

[include]
  path = ~/.gitconfig.local

[merge]
  conflictstyle = diff3
  ff = false

[pull]
  rebase = preserve

[push]
  default = simple

[url "https://github.com/"]
  insteadOf = git@github.com:

[url "https://"]
  insteadOf = git://

[mailmap]
  file = ~/.mailmap
