# https://git-scm.com/docs/git-config

[alias]
  a = add
  aa = add --all
  ap = add --patch
  b = branch
  ba = branch --all
  br = branch --remote
  ca = commit --amend
  ci = commit -v
  cl = clone
  co = checkout
  com = checkout master
  dc = diff --word-diff --cached --color-words
  df = diff --word-diff --color-words
  f = fetch
  l = log --date=format:'%b %d, %Y' --pretty=format:'%C(yellow bold)%h%Creset %s%n %C(blue)%aN (%cd)%n'
  lg = log --graph --stat --pretty=format:'%C(yellow bold)%h%Creset %s%n %C(blue)%aN (%cd)%n'
  pl = pull
  ps = push
  psf = push --force-with-lease
  pum = push -u origin master
  recent = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  rv = remote -v
  s = status
  tl = tag --list
  uncommit = reset --soft HEAD^
  unstage = reset
  wch = whatchanged -p --abbrev-commit --pretty=medium

[apply]
  whitespace = nowarn

[color "branch"]
  current = white bold
  local   = yellow
  remote  = cyan

[color "diff"]
  frag = white bold
  meta = yellow bold
  new  = green
  old  = red

[color "status"]
  untracked = cyan

[commit]
  template = ~/.gitmessage

[core]
  autocrlf     = input
  excludesfile = ~/.gitignore_global
  ignorecase   = false
  safecrlf     = warn

[fetch]
  prune = true

[gitsh]
  defaultCommand = status --short --branch

[gitsh "color"]
  default   = blue
  modified  = red
  untracked = cyan

[include]
  path = ~/.gitconfig.local

[mailmap]
  # Display commit author names based on global mailmap file.
  file = ~/.mailmap

[merge]
  conflictstyle = diff3

  # Always create local merge commits when merging.
  ff = false

[pull]
  # Don't flatten locally created merge commits when rebasing.
  rebase = preserve

[push]
  # Refuse to push if upstream branch name is different from local.
  default = simple

[url "https://github.com/"]
  insteadOf = git@github.com:

[url "https://"]
  insteadOf = git://
